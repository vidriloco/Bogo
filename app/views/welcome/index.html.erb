<div class="container-panel">
	<div class="app-bar">
		<ul>
			<li><%= link_to image_tag('ITDP_logo.png'), "http://itdp.mx", :target => "_blank" %></li>
			<li><%= link_to image_tag('uk_embassy_logo.png'), "https://www.gov.uk/government/world/mexico", :target => "_blank" %></li>
		</ul>
	</div>
	
	<div class="content">
		<div id="polygons" class="transitable">
			<div class="panel-section blue">
				<p>Polígonos Geoestadísticos</p>
				<ul>
					<li class="layer" data-toggle="tooltip" data-placement="top" title="Polígonos">
						<%= link_to image_tag('polygons.png', :size => '45x45'), 'javascript:void(0);', :class => 'toggler', :id => 'polygons-t' %>
					</li>
				</ul>
			</div>

			<div class="panel">
				<%= render 'welcome/radius' %>
	
				<div id="stats-panel" class="agebs hidden">
					<div class="separator"></div>
					<%= render 'welcome/agebs' %>
				</div>
			</div>
		</div>
		<div id="map" class="transitable">
			<div class="panel-section yellow">
				<p>Mapa</p>
				<ul>
					<li class="layer" data-toggle="tooltip" data-placement="top" title="Mapa">
						<%= link_to image_tag('map.png', :size => '45x45'), 'javascript:void(0);', :class => 'toggler', :id => 'map-t' %>
					</li>
				</ul>
			</div>
			<div class="panel">
				<%= render 'welcome/network' %>
			</div>
		</div>
	</div>
	
</div>

<div class="loading-cover">
	<div class="spinner"></div>
</div>

<div id='map-basic'></div>

<% if 1 == 2 %>
	<div class="panels left-sided left-panel">
		<div class="panel-togglers">
			<%= link_to image_tag('polygon_button.png'), 'javascript:void(0);', id: 'agebs', :class => 'toggler polygon-layer' %>
			<%= link_to image_tag('statistics_button.png'), 'javascript:void(0);', id: 'radius', :class => 'toggler polygon-layer' %>
		</div>
		<div class="panel-container">
			<%= render 'welcome/radius' %>
			<%= render 'welcome/agebs' %>
		</div>
	</div>

	<div class="panels right-sided right-panel">
		<div class="panel-togglers contents-to-right">
			<%= link_to image_tag('network_button.png'), 'javascript:void(0);', id: 'network-toggler', :class => 'toggler selected' %>
			<%= link_to image_tag('map_button.png'), 'javascript:void(0);', id: 'map-toggler', :class => 'toggler' %>
		</div>

		<%= render 'welcome/network' %>
		<%= render 'welcome/map' %>
	</div>
<% end %>